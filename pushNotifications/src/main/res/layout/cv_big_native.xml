<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">
        <ImageView
            android:id="@+id/big_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="250dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#800b0b0b" />
    </FrameLayout>

    <ImageView
        android:id="@+id/small_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="15dp"
        android:scaleType="centerCrop"
        android:layout_gravity="start|top"
        tools:src="@drawable/pt_star_filled"
        />

    <LinearLayout
        android:id="@+id/shareIconLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:paddingEnd="15dp"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:paddingBottom="20dp">
        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="center"
            android:src="@drawable/ic_push_share_dark"
            tools:ignore="UnusedAttribute"
            />
        <ImageView
            android:id="@+id/share_icon_light"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/ic_push_share"
            tools:ignore="UnusedAttribute"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Some text should be there in for purposes this is demo text where, Some text should be there in for purposes this is demo text where, Some text should be there in for purposes this is demo text where"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:layout_gravity="bottom"
        android:textAppearance="@style/TextAppearance.Compat.Notification"
        android:maxLines="3"
        android:textStyle="bold"
        android:textSize="17sp"/>
</FrameLayout>